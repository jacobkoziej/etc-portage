# flags
COMMON_FLAGS="-march=skylake"
RUSTFLAGS="-C target-cpu=skylake"

# hardware
CPU_FLAGS_X86="aes avx avx2 f16c fma3 mmx mmxext pclmul popcnt rdrand sse \
               sse2 sse3 sse4_1 sse4_2 ssse3"
INPUT_DEVICES="libinput synaptics"
VIDEO_CARDS="i965 intel iris"

# build
MAKEOPTS="-j8"
USE="-gnome -kde -qt4 -qt5 -wayland \
     acpi bluetooth pulseaudio wifi"
